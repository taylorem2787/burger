<div class="jumbotron" style = "text-align: center;">
	<header> <h1>Hawaiian Burger Shack</h1></header>
	    	<ul class="menu">
	    		<div class="row">
	    		<br><br>
	    			<div class="col-sm-6 right-align">
	    				<li><p><b>Famous Hawaiian Burger</b></p></li>
	    				<li><p><b>Nalu Nalu Burger</b></p></li>
	    			</div>
	    			<div class="col-sm-6 left-align">
	    				<li><p><b>Big Wave Burger</b></p></li>
	    				<li><p><b>Surfside Burger</b></p></li>
	    			</div>
	    		</div>
	    	</ul>
	</div>
</div>
  <div class="container">



<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Burgers To be Devoured!</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
        {{#unless this.devoured}}
        <div class = "well">
            <div class="row">
            <div class="col-sm-6">
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <br>
              <br>
              </div>
              <div class="col-sm-6">
              <span>{{this.id}}. {{this.burger_name}}<button type="submit" class="btn btn-primary" style = "margin: auto; clear:both;">Eat it!</button></span>
            </div>
            </form>
            </div>
          <br />
        </div>  
        {{/unless}}
      {{/each}}
    </div>
  </div>
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Add a Burger</h3>
    </div>
    <div class="panel-body">
      <form class="create-update-form" action="burgers/create" method="POST">
        <div class="form-group">
          <label for="newBurger">Burger Name:</label>
          <input type="hidden" name="devoured" value="0">
          <input type="text" id="newBurger" name="burger_name">
          <br />
          <br />
          <button type="submit" class="btn btn-primary center-block">Add Burger</button>
        </div>   
      </form>
    </div>
  </div> 
</div>

<div class="col-lg-4">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Burgers Devoured</h3>
    </div>
    <div class="panel-body">
      {{#each burgers}}
        {{#if this.devoured}}
           {{this.id}}. {{this.burger_name}}
            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
            </form>
        {{/if}}
      {{/each}}
    </div>
  </div>    
</div>
</div>